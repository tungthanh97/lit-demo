{
  "compilerOptions": {
      "target": "es2021",
      "module": "es2020",
      "lib": ["es2021", "DOM", "DOM.Iterable"],
      "moduleResolution": "node",
      "outDir": "dist",
      "rootDir": "./",
      "strict": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "paths": {
          "@/*": ["./src/*"]
      },
      "plugins": [
          {
              "name": "ts-lit-plugin",
              "strict": true
          }
      ]
  },
  "include": ["src/**/*.ts"],
  "exclude": []
}
